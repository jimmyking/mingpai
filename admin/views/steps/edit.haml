%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:steps, :index, :type_id => params[:type_id])
  %li=link_to tag_icon(:plus, pat(:new)), url(:steps, :new, :type_id => params[:type_id])
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:steps, :edit, :type_id => params[:type_id], :id => @step.id)

.tabs-content
  = form_for :step, url(:steps, :update, :type_id => params[:type_id], :id => @step.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'steps/form', :locals => { :f => f }
