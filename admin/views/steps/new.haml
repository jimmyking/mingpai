%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:steps, :index, :type_id => params[:type_id])
  %li.active=link_to tag_icon(:plus, pat(:new)), url(:steps, :new, :type_id => params[:type_id])

.tabs-content
  = form_for :step, url(:steps, :create, :type_id => params[:type_id]), :class => 'form-horizontal' do |f|
    =partial 'steps/form', :locals => { :f => f }
