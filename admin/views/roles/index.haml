%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, "列表"), url(:roles, :index)
  %li=link_to tag_icon(:plus, "新增"), url(:roles, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header= mat(:role, :id)
        %th.header= "名称"
        %th.header.list-row-action-header

    %tbody
      -@roles.each do |role|
        %tr.list-row
          
          %td.list-column=role.id
          %td.list-column=role.name
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:roles, :edit, :id => role.id), :rel => :tooltip, :title => "#{pat(:edit)} role", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:asterisk), :href => url(:roles, :roles_menus, :id => role.id), :rel => :tooltip, :title => "#{pat(:edit)} role", :class => 'list-row-action-wrapper-link'
             