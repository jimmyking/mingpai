%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, "列表"), url(:accounts, :index)
  %li=link_to tag_icon(:plus, "新增"), url(:accounts, :new)
  %li.active=link_to tag_icon(:edit, "编辑"), url(:accounts, :edit, :id => @account.id)

.tabs-content
  = form_for :account, url(:accounts, :update, :id => @account.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'accounts/form', :locals => { :f => f }
