%ol.breadcrumb
  %li
    =link_to @game.name, url(:games, :index)
  %li.active
    =link_to "编辑服务器"

%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, "列表"), url(:departments, :index, :game_id => @game.id)
  %li=link_to tag_icon(:plus, "新增"), url(:departments, :new, :game_id => @game.id)
  %li.active=link_to tag_icon(:edit, "编辑"), url(:departments, :edit, :game_id => @game.id, :id => @department.id)

.tabs-content
  = form_for :department, url(:departments, :update, :game_id => @game.id, :id => @department.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'departments/form', :locals => { :f => f }
