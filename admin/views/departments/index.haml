%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:departments, :index, :game_id => @game.id)
  %li=link_to tag_icon(:plus, pat(:new)), url(:departments, :new, :game_id => @game.id)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    = form_tag url(:departments, :destroy_many, :game_id => @game.id), :method => :delete do
                      =hidden_field_tag :department_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:department, :id)
        %th.header= mat(:department, :name)
        %th.header= mat(:department, :game_id)
        %th.header= mat(:department, :created_at)
        %th.header= mat(:department, :updated_at)
        %th.header.list-row-action-header

    %tbody
      -@departments.each do |department|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'department_ids[]', :value => department.id, :class => 'list-selectable-checkbox'
          %td.list-column=department.id
          %td.list-column=department.name
          %td.list-column=department.game.name
          %td.list-column=time_ago_in_words department.created_at
          %td.list-column=time_ago_in_words department.updated_at
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:departments, :edit, :game_id => @game.id, :id => department.id), :rel => :tooltip, :title => "#{pat(:edit)} department", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} department", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "department")
                .popover-content
                  = form_tag url(:departments, :destroy, :game_id => @game.id, :id => department.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)
