%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:types, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:types, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:types, :edit, :id => @type.id)

.tabs-content
  = form_for :type, url(:types, :update, :id => @type.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'types/form', :locals => { :f => f }
