%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:types, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:types, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    = form_tag url(:types, :destroy_many), :method => :delete do
                      =hidden_field_tag :type_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:type, :id)
        %th.header= mat(:type, :name)
        %th.header= mat(:type, :color)
        %th.header= mat(:type, :created_at)
        %th.header= mat(:type, :updated_at)
        %th.header.list-row-action-header

    %tbody
      -@types.each do |type|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'type_ids[]', :value => type.id, :class => 'list-selectable-checkbox'
          %td.list-column=type.id
          %td.list-column=type.name
          %td.list-column=type.color
          %td.list-column=time_ago_in_words type.created_at
          %td.list-column=time_ago_in_words type.updated_at
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:types, :edit, :id => type.id), :rel => :tooltip, :title => "edit type", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:signal), :href => url(:steps, :index, :type_id => type.id), :rel => :tooltip, :title => "edit step", :class => 'list-row-action-wrapper-link'
              
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "delete type", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "type")
                .popover-content
                  = form_tag url(:types, :destroy, :id => type.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)
