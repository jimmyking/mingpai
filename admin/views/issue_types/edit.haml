%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:issue_types, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:issue_types, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:issue_types, :edit, :id => @issue_type.id)

.tabs-content
  = form_for :issue_type, url(:issue_types, :update, :id => @issue_type.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'issue_types/form', :locals => { :f => f }
